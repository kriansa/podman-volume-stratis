[Unit]
Description=Setup Stratis test loop device
Before=stratisd.service
After=local-fs.target

[Service]
Type=oneshot
ExecStartPre=-/usr/bin/dd if=/dev/zero of=/var/lib/stratis-test-disk.img bs=1M count=4096 status=progress
ExecStartPre=-/sbin/losetup -d /dev/loop0
ExecStart=/sbin/losetup /dev/loop0 /var/lib/stratis-test-disk.img
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
